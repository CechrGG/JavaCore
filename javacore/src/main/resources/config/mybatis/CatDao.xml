<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="acmr.springframework.ioc.dao.CatDao">
    <select id="getCatById" parameterType="long" resultType="acmr.springframework.ioc.entity.auth.Cat">
        select * from cat where id=#{id}
    </select>
    <insert id="insertCat" parameterType="acmr.springframework.ioc.entity.auth.Cat" useGeneratedKeys="true" keyProperty="id">
        insert into cat(id,name,owner_id,sex,breed,color,weight,length,age,birthday,deathday,memo,gmt_create,gmt_update)
                    values (#{id},#{name},#{owner_id},#{sex},#{breed},#{color},#{weight},#{length},#{age},#{birthday},#{deathday},
                    #{memo},#{gmt_create},#{gmt_update})
    </insert>
</mapper>